<body class="<%= "#{controller_name} bg_#{[1,2].sample}" %>">

<%= link_to("accueil", root_path, :id => "home_link") unless controller_name == "home" %>

<% if content_for? :header -%>
<header class="title">
  <%= yield :header %>
</header>
<% end -%>

<section role="main" class="clearfix">
  <div class="notice"><%= notice %></div>
  <div class="alert"><%= alert %></div>
  <%= yield  %>
</section>

<% if content_for? :complementary -%>
<section role="complementary" class="clearfix">
  <%= yield :complementary %>
</section>
<% end -%>

</body>
</html>
