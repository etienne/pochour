<%= form_for [@article.user, @article, @article.comments.build] do |f| %>

  <p><%= f.label :author, "Nom" %><br />
  <% default_name = current_user.name if user_signed_in? -%>
  <%= f.text_field :author, :value => default_name %></p>

  <p><%= f.label :comment, "Commentation" %><br />
  <%= f.text_area :comment %></p>

  <p><%= f.submit %></p>
<% end %>
